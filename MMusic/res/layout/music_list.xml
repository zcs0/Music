        android:content="@+id/content"
        android:handle="@+id/title_txt_handle"
        android:visibility="invisible" >

        <include layout="@layout/sliding_handle" />

        <include layout="@layout/sliding_content" />
    </com.music.view.MySlidingDrawer>
